{
  "Features": {
    "SendToLog": true,
    "SendToApi": false,
    "UseKnxConnectionTunneling": true,
    "UseKnxConnectionRouting": false,
    "DebugKnx": false
  },

  "Knx": {
    "RouterIp": "10.0.4.7",
    "RouterPort": 3671,
    "LocalIp": "10.0.1.9",
    "LocalPort": 3671
  },

  "Api": {
    "Endpoint": "https://localhost:5000"
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "FunctionalLiving.Knx.Sender.KnxSender": "Debug",
        "FunctionalLiving.Knx.KnxConnectionRouting": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}",
        }
      }
    ],
    "Properties": {
      "Application": "FunctionalLiving - Knx Sender"
    }
  }
}
